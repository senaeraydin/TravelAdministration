@model TourismTravelAdministration.Models.Payment
@{
    ViewBag.Title = "PaymentForm";
    Layout = null;
}

<head>
    <style>
        body {
            background-color: rgba(195,234,235,255);
        }
    </style>
</head>

<body>
    <p style="text-align: center; margin-top: 5%; font-size: 200%; color: rgba(232,123,61,255) ">You made a great choice.</p>
    <p style="text-align: center; margin-top: 2%; font-size: 200%; color: rgba(232,123,61,255) ">Please enter your payment information to create your reservation.</p>
    <div style="width:45% ; height: 60%; border:1px solid black; margin-left:25%; margin-top: 4%; ">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(){

                <p style="font-size:150%; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; padding-top:13%; padding-left: 13%">Enter your name on your card: @Html.TextBoxFor(x => x.CardOwnerName)</p>

                <p style="font-size: 150%; padding-left: 3%; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; padding-left: 13%; padding-top: 2%; ">Enter Your Card number: @Html.TextBoxFor(x => x.CardNumber)</p>


                <p style="font-size: 150%; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; padding-left: 13%; padding-top: 2%; ">Expiration Date: @Html.TextBoxFor(x => x.ExpDate)</p>

                <p style="font-size: 150%; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; padding-top: 2%; padding-left: 13% ">CCV: @Html.TextBoxFor(x => x.SecurityCode)</p>


                <input style="margin-top: 10%; width: 30%; height: 10%; background-color: rgba(232,123,61,255); color: darkblue; margin-left: 35% " type="submit" value=" submit " />
                <link rel="stylesheet" href="@Href("~/Content/Style.css")" type="text/css" />
            }
        }

    </div>

</body>

