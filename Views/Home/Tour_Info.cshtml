
@{
    ViewBag.Title = "Tour_Info";
}

@helper GetImagePath(string fileName)
{
    var imagePath = $"~/Content/Images/{fileName}";
    <img src="@Url.Content(imagePath)" alt="Tour Image" width="100%" height="100%" />
}
<p style="font-weight:bolder; position:relative; ">@GetImagePath(Model.TImage)</p>

<p style=" text-align:center; margin-top: -18%; position:relative; font-size: 300%; font-weight:bolder; font-family:'MS UI Gothic'; color: rgb(94,1,80); background: rgb(234,230,233)">@Model.TourName</p>

<p style="text-align: center; margin-top: 18%; color: rgb(94,1,80); font-size: 200%; font-weight: bolder; font-family:'Franklin Gothic', Times, serif ">DESCRIPTION</p>
<div style="width: 70%; padding-top: 5%;">
    <p style="margin-top: -2%; text-align:center; margin-left: 40%; font-size:125%">@Model.Description</p>
</div>

<p>
