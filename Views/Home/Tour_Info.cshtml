    {
    <p style="color: green; font-weight: bolder; font-size: 180%; margin-left:35%; margin-top:5%; margin-bottom:4% ; font-family:Rockwell">You can make an reservation</p>
    <a style=" border: 1px solid orange; border-radius:10px; background:orange; border-width: 25px; margin-left: 41%; text-decoration:none; font-size: 130%" href="@Url.Action("PaymentForm", "Home")">Make a Reservation</a>
}
else
{
